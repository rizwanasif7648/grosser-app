<tr class="cursor-pointer">
  <%= f.hidden_field :id %>
  <td>
    <div class="row border-left border-bottom border-right logbook-table">
      <div class="col-sm-6 col-lg-1 py-2 bordered-img text-center ml-2">
        <%= f.text_field :photo, type: :image, src: image_path("logo.png"), class: 'img-fluid bg-white' %>
      </div>
      <div class="col-lg-10 py-2 pl-4">
        <%= f.text_field :note, class: 'text-dark border-0 w-100' %>
      </div>
      <div class="border-left">
        <%= f.hidden_field :_destroy %>
        <div class="col-lg-12 pt-2 pl-3">
          <%= link_to '#', class: 'remove_upload pull-right' do %>
            <div class="border-bottom rounded-sm custom-delete-icon text-center">
              <i class="fas fa-trash mx-1"></i>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </td>
</tr>
