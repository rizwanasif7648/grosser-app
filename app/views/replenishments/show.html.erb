<div class="d-sm-flex align-items-center justify-content-between pb-3 border-bottom">
  <a href="<%= replenishments_path %>" class="image-btn">
    <%= image_tag 'back_button', class: 'img-fluid' %>
  </a>
</div>
<div class="px-4 pt-4 pb-0 mt-3 mb-5 bg-white rounded-sm">
  <div class="row">
    <div class="col-sm-12">
      <div class="row mt-3">
        <div class="col-sm-4 px-sm-0">
          <div class="row my-1 py-1">
            <div class="col-sm-6">
              <label for="customer" class="d-inline-block text-danger roboto-medium mb-0">Customer:</label>
            </div>
            <div class="col-sm-6">
              <label for="customer_data" class="text-light-black mb-0"><%= @replenishment.customer.name%></label>
            </div>
          </div>
        </div>
        <div class="col-sm-4 px-sm-0">
          <div class="row my-1 py-1">
            <div class="col-sm-6">
              <label for="po_number" class="d-inline-block text-danger roboto-medium mb-0">PO number:</label>
            </div>
            <div class="col-sm-6">
              <label for="po_number_data" class="text-light-black mb-0"><%= @replenishment.po_no %></label>
            </div>
          </div>
        </div>
        <div class="col-sm-4 px-sm-0">
          <div class="row my-1 py-1">
            <div class="col-sm-6">
              <label for="po_issuance" class="d-inline-block text-danger roboto-medium mb-0">PO issue:</label>
            </div>
            <div class="col-sm-6">
              <label for="po_issuance" class="text-light-black mb-0"><%= @replenishment.po_issuance.strftime("%d/%m/%Y") %></label>
            </div>
          </div>
        </div>
        <div class="col-sm-4 px-sm-0">
          <div class="row my-1 py-1">
            <div class="col-sm-6">
              <label for="quotation_no" class="d-inline-block text-danger roboto-medium mb-0">Quotation number:</label>
            </div>
            <div class="col-sm-6">
              <label for="quotation_no" class="text-light-black mb-0"><%= @replenishment.quotation_no %></label>
            </div>
          </div>
        </div>
        <div class="col-sm-4 px-sm-0">
          <div class="row my-1 py-1">
            <div class="col-sm-6">
              <label for="created_by_id" class="d-inline-block text-danger roboto-medium mb-0">Added by:</label>
            </div>
            <div class="col-sm-6">
              <label for="created_by_id" class="text-light-black mb-0"><%= @replenishment.created_by.name %></label>
            </div>
          </div>
        </div>
        <div class="col-sm-4 px-sm-0">
          <div class="row my-1 py-1">
            <div class="col-sm-6">
              <label for="added_date" class="d-inline-block text-danger roboto-medium mb-0">Added Date:</label>
            </div>
            <div class="col-sm-6">
              <label for="added_date" class="text-light-black mb-0"><%= @replenishment.added_date.strftime("%d/%m/%Y") %></label>
            </div>
          </div>
        </div>
        <div class="table-responsive col-12 text-nowrap px-sm-0 pb-3 mt-4">
          <table class="table table-borderless text-light-black w-100">
            <thead>
            <tr>
              <th></th>
              <th class="color-black">Product name</th>
              <th class="color-black">Quantity</th>
              <th class="color-black">Box number</th>
              <th class="color-black">Location</th>
              <th class="color-black">Qty Before</th>
              <th class="color-black">Qty After</th>
              <th class="color-black">Exp Before</th>
              <th class="color-black">Exp After</th>
            </tr>
            </thead>
            <tbody class="bg-white rounded">
            <% @replenishment.replenishment_line_items.each_with_index do |line_item, index| %>
              <tr class="cursor-pointer">
                <td class="border-bottom rounded-sm text-light-black product_incidents_list">
                  <%= image_tag line_item.product.photo.url, class: 'img-fluid bg-white' %>
                </td>
                <td class="border-bottom rounded-sm text-light-black"><%= line_item.product_name %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= line_item.quantity %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= line_item.box.code %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= line_item.box.location %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= line_item.quantity_before %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= line_item.quantity_after %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= date(line_item.expiry_before) %></td>
                <td class="border-bottom rounded-sm text-light-black"><%= date(line_item.expiry_after) %></td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
        <% @replenishment.uploads.each_with_index do |upload, index| %>
          <div class="row border-left border-bottom border-right logbook-table mt-3">
            <div class="col-sm-6 col-lg-1 py-2 bordered-img text-center ml-2">
              <%= image_tag upload.photo.url, class: 'img-fluid bg-white pt-2' %>
            </div>
            <div class="col-lg-10 py-2 pl-4 font-size-smaller">
              <%= upload.note %>
            </div>
          </div>
        <% end %>
        <div class="col-sm-12 px-sm-0 mt-4">
          <div class="row my-1 py-1">
            <div class="col-sm-1">
              <label for="notes" class="d-inline-block text-danger roboto-medium mb-0">Note:</label>
            </div>
            <div class="col-sm-11">
              <label for="notes" class="text-light-black mb-0"><%= @replenishment.notes %></label>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
